<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |use| %>
      <tr>
        <td><%= use.username %></td>
        <td><%= use.password %></td>
        <td><%= link_to 'Show', use %></td>
        <td><%= link_to 'Edit', edit_use_path(use) %></td>
        <td><%= link_to 'Destroy', use, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Use', new_use_path %>
